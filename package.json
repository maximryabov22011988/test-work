{
  "name": "Leo",
  "version": "1.0.0",
  "description": "Тестовая работа",
  "author": "Maxim Ryabov",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:maximryabov22011988/test-work.git"
  },
  "scripts": {
    "test:style": "stylelint \"source/**/*.scss\" --syntax=scss",
    "test:editorconfig": "editorconfig-cli source/**/*.{html,scss}",
    "test": "npm run test:editorconfig && npm run test:style",
    "clean": "gulp clean",
    "start": "gulp && gulp serve",
    "build": "cross-env NODE_ENV=production gulp build",
    "deploy": "cross-env NODE_ENV=production ./node_modules/.bin/gulp build && cross-env ./node_modules/.bin/gulp deploy"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "7.2.x",
    "browser-sync": "2.23.x",
    "cross-env": "^5.1.3",
    "del": "3.0.x",
    "gulp": "3.9.x",
    "gulp-concat": "2.6.x",
    "gulp-csso": "3.0.x",
    "gulp-debug": "^3.2.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-htmlmin": "4.0.x",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "4.1.x",
    "gulp-jshint": "2.1.x",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "7.0.x",
    "gulp-posthtml": "^3.0.4",
    "gulp-rename": "1.2.x",
    "gulp-sass": "3.1.x",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "2.6.x",
    "gulp-uglify": "3.0.x",
    "gulp-wait": "0.0.2",
    "gulp-webp": "3.0.x",
    "jshint": "2.9.x",
    "npm": "5.6.x",
    "run-sequence": "2.2.x",
    "stylelint": "8.4.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "engines": {
    "node": "8.9"
  },
  "dependencies": {
    "normalize.css": "^8.0.0"
  }
}
